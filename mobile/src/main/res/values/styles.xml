<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextInputEditText" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">30sp</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/editTextColor</item>
        <item name="colorControlNormal">@color/editTextColor</item>
        <item name="colorControlActivated">@color/editTextColor</item>
    </style>
</resources>