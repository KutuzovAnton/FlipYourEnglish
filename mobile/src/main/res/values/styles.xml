<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextInputEditText" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">30sp</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/editTextColor</item>
        <item name="colorControlNormal">@color/editTextColor</item>
        <item name="colorControlActivated">@color/editTextColor</item>
    </style>

    <style name="MyButton" parent="android:Theme.DeviceDefault.Dialog.Alert">
        <item name="colorControlHighlight">@color/bright_greenOpacity</item>
        <item name="colorButtonNormal">@color/bright_greenOpacity</item>
        <item name="android:colorBackground">@color/bright_greenOpacity</item>
        <item name="android:background">@color/bright_greenOpacity</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="appTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:layout_marginTop">0.5dp</item>
        <item name="colorPrimary">@color/bright_green</item>
        <item name="colorPrimaryDark">@color/bright_green</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="android:colorForeground">@android:color/black</item>
    </style>

</resources>