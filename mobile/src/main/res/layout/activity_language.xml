<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/language_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bright_green"
    android:configChanges="locale"
    android:padding="0dp">

    <RadioButton
        android:id="@+id/radioButtonEnglish"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginBottom="0dp"
        android:background="@mipmap/english"
        android:buttonTint="@color/bright_green"
        android:padding="5dp"
        android:text="@string/english"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="5dp"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp" />

    <RadioButton
        android:id="@+id/radioButtonRussian"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginBottom="1dp"
        android:background="@mipmap/russia"
        android:buttonTint="@color/bright_green"
        android:text="@string/russian"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/radioButtonEnglish"
        app:layout_constraintVertical_bias="0.015"
        android:layout_marginRight="0dp"
        android:layout_marginLeft="0dp" />

</android.support.constraint.ConstraintLayout>